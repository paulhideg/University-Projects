<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/etRecipeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Title"
        app:layout_constraintEnd_toStartOf="@+id/btnAddRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etRecipeIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingredients"
        app:layout_constraintEnd_toStartOf="@+id/btnAddRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRecipeTitle" />

    <EditText
        android:id="@+id/etRecipeInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Instructions"
        app:layout_constraintEnd_toStartOf="@+id/btnAddRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRecipeIngredients" />

    <EditText
        android:id="@+id/etRecipeDifficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Difficulty"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/btnAddRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRecipeInstructions" />

    <EditText
        android:id="@+id/etRecipeTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/btnAddRecipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRecipeDifficulty" />

    <Button
        android:id="@+id/btnAddRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>