<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingTop="16dp"
    android:paddingEnd="8dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tvRecipeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recipe"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tvRecipeIngredients"
        app:layout_constraintEnd_toStartOf="@+id/cbDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/tvRecipeIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingredients: bread"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tvRecipeInstructions"
        app:layout_constraintEnd_toStartOf="@+id/cbDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecipeTitle"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/tvRecipeInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instructions: Bake bread"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tvRecipeDifficulty"
        app:layout_constraintEnd_toStartOf="@+id/cbDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecipeIngredients"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/tvRecipeDifficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Difficulty: 1"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tvRecipeTime"
        app:layout_constraintEnd_toStartOf="@+id/cbDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecipeInstructions"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/tvRecipeTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cooking Time: 20 minutes"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cbDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecipeDifficulty"
        app:layout_constraintHorizontal_bias="0.5" />

    <CheckBox
        android:id="@+id/cbDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
